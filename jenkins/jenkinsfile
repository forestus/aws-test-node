pipeline {
    agent any 
    stages {
        stage('Compile') {
            steps {
                sh 'sudo pm2 l'
                sh 'rm -rf coverage'
                sh 'rm -rf Build'
                sh 'rm -rf coverage.zip'
                sh 'rm -rf node_modules'
                sh 'ls'
                sh 'mkdir Build'
                sh 'rsync -Rr * ./Build'
                sh 'ls'
                echo 'Compile the source code' 
                sh 'npm install'
                sh 'npm start'
            }
        }
        stage('Run Unit Tests') {
            steps {
                echo 'Run unit tests from the source code'
                sh 'npm run test:unit'
            }
        }
        stage('Run Integration Tests') {
            steps {
                echo 'Run only crucial integration tests from the source code' 
                sh 'npm run test:integration'
            }
        }
        stage('Coverage') {
            steps {
                echo 'Save the assemblies generated from the compilation' 
                sh 'npm run test:ci'
                sh 'zip -r coverage.zip coverage'
                archiveArtifacts artifacts: 'coverage.zip', fingerprint: true
            }
        }
        stage('Build') {
            steps {
                archiveArtifacts artifacts: 'coverage.zip', fingerprint: true
                sh 'cd Build'
                sh 'zip -r builded.zip *'
                sh 'mv builded.zip /home/ubuntu'
            }
        }
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                echo 'Deployed'
                sh 'cd /home/ubuntu'
                sh 'sudo rm -rf .pm2'
                sh 'sudo mkdir node'
                sh 'sudo unzip build.zip -d node'
                sh 'sudo rm -rf build.zip'
                sh 'cd node'
                sh 'sudo npm install --production'
                sh 'sudo pm2 start index.js -f' 
            }
        }
    }
    post {
        always {
            emailext body: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}\n More info at: ${env.BUILD_URL}",
                recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}"
        }
    }
}